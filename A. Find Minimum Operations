#include <bits/stdc++.h>
using namespace std;
int main() {
    int t;
    cin >> t;
    while (t--) 
    {
      long long n,k;
      cin>>n>>k;
      long long count=0;
      if(k==1)
      {
         cout<<n<<endl;
      }
      else
      {
         while(n)
         {
            count+=n%k;
            n=n/k;
         }
         cout<<count<<endl;
      }
    }
 
    return 0;
}
